<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Fitness Tracker - Terms of Service</title>
    <link rel="stylesheet" href="/main.css">
    <link rel="stylesheet" href="/css/navbar.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Open+Dyslexic&display=swap">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
</head>
<body class="<%= theme %> <%= fontPref %>">

<!-- Flash Messages -->
<% if (messages.success) { %>
    <div class="flash success"><%= messages.success %></div>
<% } %>
<% if (messages.error) { %>
    <div class="flash error"><%= messages.error %></div>
<% } %>

<!-- Modern Navbar -->
<nav class="navbar">
    <a href="/" class="navbar-brand">
        <i class="fas fa-dumbbell"></i>
        Fitness Tracker
    </a>

    <div class="hamburger" onclick="toggleMenu()">
        <span></span>
        <span></span>
        <span></span>
    </div>

    <ul class="navbar-nav">
        <li class="nav-item">
            <a href="/dashboard" class="nav-link">
                <i class="fas fa-chart-line"></i>
                Dashboard
            </a>
        </li>
        
        <li class="nav-item dropdown">
            <a href="javascript:void(0)" class="nav-link" onclick="toggleDropdown('fitness')">
                <i class="fas fa-heartbeat"></i>
                Fitness
                <i class="fas fa-chevron-down"></i>
            </a>
            <div class="dropdown-menu" id="fitness-dropdown">
                <a href="/workout" class="dropdown-item">
                    <i class="fas fa-dumbbell"></i>
                    Workouts
                </a>
                <a href="/water" class="dropdown-item">
                    <i class="fas fa-tint"></i>
                    Water Tracker
                </a>
                <a href="/sleep" class="dropdown-item">
                    <i class="fas fa-moon"></i>
                    Sleep Tracker
                </a>
            </div>
        </li>

        <li class="nav-item">
            <a href="/faq" class="nav-link">
                <i class="fas fa-question-circle"></i>
                FAQ
            </a>
        </li>

        <% if (user) { %>
            <li class="nav-item dropdown">
                <div class="user-profile" onclick="toggleDropdown('user')">
                    <div class="user-info">
                        <span class="user-name"><%= user.username %></span>
                        <span class="user-role">Member</span>
                    </div>
                    <img src="/<%= user.profileIcon || 'avatarblack.png' %>" alt="User Avatar" class="user-avatar">
                </div>
                <div class="dropdown-menu" id="user-dropdown">
                    <a href="/profile" class="dropdown-item">
                        <i class="fas fa-user"></i>
                        Profile
                    </a>
                    <a href="/settings" class="dropdown-item">
                        <i class="fas fa-cog"></i>
                        Settings
                    </a>
                    <div class="dropdown-divider"></div>
                    <form action="/users/logout" method="POST" style="margin: 0;">
                        <button type="submit" class="dropdown-item" style="width: 100%; border: none; background: none; cursor: pointer;">
                            <i class="fas fa-sign-out-alt"></i>
                            Logout
                        </button>
                    </form>
                </div>
            </li>
        <% } else { %>
            <li class="nav-item">
                <a href="/users/login" class="nav-link">
                    <i class="fas fa-sign-in-alt"></i>
                    Login
                </a>
            </li>
            <li class="nav-item">
                <a href="/users/register" class="nav-link">
                    <i class="fas fa-user-plus"></i>
                    Sign Up
                </a>
            </li>
        <% } %>
    </ul>
</nav>

<div class="legal-container">
    <div class="legal-header">
        <h1><i class="fas fa-gavel"></i> Terms of Service</h1>
        <p class="subtitle">Last updated: <%= new Date().toLocaleDateString() %></p>
    </div>

